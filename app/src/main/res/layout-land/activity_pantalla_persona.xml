<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pantallaPersona">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/persona1"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/persona1" />

        <ImageView
            android:id="@+id/persona2"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/persona2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/persona3"
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/persona3" />

        <ImageView
            android:id="@+id/persona4"
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/persona4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/persona5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/persona5" />

        <ImageView
            android:id="@+id/persona6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/persona6" />
    </LinearLayout>
</LinearLayout>